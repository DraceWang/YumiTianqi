
public class Test {
	static {int x = 5;}
	static int x, y;
	public static void main(String[] args){
		System.out.println(x--);
		System.out.println(x);
		myMethod();
		System.out.println(x+";"+y);
		System.out.println(x + y++ + x);
		
	}
	public static void myMethod(){
		// y = -1 + 1 = 0
		y = x++ + ++x;
	}
}
